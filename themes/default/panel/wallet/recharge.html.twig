{% extends '@EasyAdmin/page/content.html.twig' %}

{% block title %}| {{ 'pteroca.recharge.recharge_balance'|trans }}{% endblock %}

{% block content_title %}{{ 'pteroca.recharge.recharge_balance'|trans }}{% endblock %}

{% block page_actions %}
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#useVoucherModal">
        <i class="fa fa-plus"></i>
        {{ 'pteroca.cart.use_voucher'|trans }}
    </button>

    <a class="btn btn-secondary" href="{{ path('panel') }}">
        {{ 'pteroca.system.back'|trans }}
    </a>
{% endblock %}

{% block main %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 mb-5 mt-4">
                {% include 'panel/wallet/components/recharge_balance_card.html.twig' %}
            </div>
            <div class="col-md-6 mt-5">
                {% include 'panel/wallet/components/transaction_history.html.twig' %}
            </div>
            <div class="col-md-6 mt-5">
                {% include 'panel/wallet/components/additional_information.html.twig' %}
            </div>
        </div>
    </div>

    {% include 'components/use_voucher_modal.html.twig' %}
{% endblock %}
